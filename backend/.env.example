# SpeakMate AI - Environment Variables
# Copy this file to .env and fill in your values

# ===========================================
# APP SETTINGS
# ===========================================
APP_NAME=SpeakMate AI
APP_VERSION=1.0.0
DEBUG=false
ENVIRONMENT=development

# ===========================================
# SERVER SETTINGS
# ===========================================
HOST=0.0.0.0
PORT=8000

# ===========================================
# SUPABASE (Required)
# ===========================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
SUPABASE_JWT_SECRET=your-supabase-jwt-secret

# ===========================================
# GOOGLE CLOUD (Required)
# ===========================================
GOOGLE_CLOUD_PROJECT=your-google-cloud-project-id
GOOGLE_APPLICATION_CREDENTIALS=backend/credentials/google-service-account.json
GOOGLE_API_KEY=your-gemini-api-key

# ===========================================
# REDIS (Optional - for background jobs)
# ===========================================
REDIS_URL=redis://localhost:6379/0
REDIS_ENABLED=false

# ===========================================
# STORAGE
# ===========================================
STORAGE_BUCKET=speakmate-assets
PDF_RETENTION_DAYS=30
AUDIO_RETENTION_DAYS=7

# ===========================================
# SECURITY
# ===========================================
RATE_LIMIT_ENABLED=true
CORS_ORIGINS=["http://localhost:3000"]
CRON_SECRET=your-strong-cron-secret

# ===========================================
# MONITORING (Optional)
# ===========================================
SENTRY_DSN=

# ===========================================
# TELEGRAM (Optional)
# ===========================================
TELEGRAM_BOT_TOKEN=
TELEGRAM_WEBHOOK_URL=
TELEGRAM_WEBAPP_URL=
