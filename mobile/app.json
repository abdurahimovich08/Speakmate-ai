{
  "expo": {
    "name": "SpeakMate AI",
    "slug": "speakmate-ai",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "scheme": "speakmate",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#1a365d"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.speakmate.ai",
      "infoPlist": {
        "NSMicrophoneUsageDescription": "SpeakMate AI needs access to your microphone for speech practice.",
        "NSSpeechRecognitionUsageDescription": "SpeakMate AI uses speech recognition to help you practice speaking."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#1a365d"
      },
      "package": "com.speakmate.ai",
      "permissions": [
        "android.permission.RECORD_AUDIO",
        "android.permission.INTERNET"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-av",
        {
          "microphonePermission": "Allow SpeakMate AI to access your microphone for speaking practice."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
